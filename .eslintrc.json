{
    "env": {
        "browser": true,
        "es6": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:chai-friendly/recommended",
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "chai-friendly"
    ],
    "rules": {
        "chai-friendly/no-unused-expressions": 2
    },
    "overrides": [
        {
            "files": "*.spec.js",
            "rules": {
                "no-unused-expressions": "off",
                "chai-friendly/no-unused-expressions": "error",
            },
        }
    ],
}